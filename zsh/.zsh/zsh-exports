#!/bin/sh

# Environment variables set everywhere
HISTFILE="$XDG_DATA_HOME"/zsh/history
HISTSIZE=1000000
SAVEHIST=1000000
export PATH="$HOME/.local/bin":$PATH
export PATH=$HOME/.fnm:$PATH

export COLORTERM=truecolor
export EDITOR="nvim"
export TERMINAL="kitty"
export BROWSER="safari"
export PATH="/opt/homebrew/bin:$PATH"
# export TERM=xterm

# AWS
export AWS_PROFILE=mvc-1-app-2

# FZF Theme
export FZF_DEFAULT_OPTS=$FZF_DEFAULT_OPTS' 
  --color=fg:#5c6166,bg:#fcfcfc,hl:#399ee6
  --color=fg+:#5c6166,bg+:#fcfcfc,hl+:#55b4d4
  --color=info:#f2ae49,prompt:#f07171,pointer:#a37acc
  --color=marker:#86b300,spinner:#a37acc,header:#4cbf99'
