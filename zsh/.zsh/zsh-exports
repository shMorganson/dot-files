#!/bin/sh

# Environment variables set everywhere
HISTFILE="$XDG_DATA_HOME"/zsh/history
HISTSIZE=1000000
SAVEHIST=1000000
export PATH="$HOME/.local/bin":$PATH
export PATH=$HOME/.fnm:$PATH

export COLORTERM=truecolor
export EDITOR=“nvim”
export TERMINAL=“terminal”
export BROWSER="safari"
export PATH="/opt/homebrew/bin:$PATH"
export PATH="/usr/local/vimr/bin:$PATH"
# export TERM=xterm

# Lazy Docker
export DOCKER_HOST=ssh://192.168.5.245 lazydocker

# AWS
export AWS_PROFILE=mvc-1-app-2

# Terraform Logs
# export TF_LOG_CORE=TRACE
# export TF_LOG_PROVIDER=TRACE
# export TF_LOG_PATH=~/Library/Logs/terraform.log

# FZF Theme
export FZF_DEFAULT_OPTS=$FZF_DEFAULT_OPTS'
  --color=fg:#ecf0c1,bg:#30365f,hl:#818596
  --color=fg+:#ecf0c1,bg+:#30365f,hl+:#00a3cc
  --color=info:#f2ce00,prompt:#ce6f8f,pointer:#00a3cc
  --color=marker:#5ccc96,spinner:#ce6f8f,header:#f2ce00'
